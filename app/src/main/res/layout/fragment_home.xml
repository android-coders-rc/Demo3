<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.HomeFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            >

            <RelativeLayout
                android:id="@+id/app_relative"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <TextView
                    android:id="@+id/post"
                    style="@style/TextAppearance.AppCompat.Display3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="15dp"
                    android:fontFamily="sans-serif-black"
                    android:text="FEED"
                    android:textColor="@color/white"
                    android:textSize="30sp" />


                <ImageView
                    android:id="@+id/filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="7dp"
                    android:layout_marginEnd="4dp"
                    android:src="@drawable/ic_close2" />

                <ImageView
                    android:id="@+id/search"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:layout_marginRight="14dp"
                    android:layout_toLeftOf="@id/filter"
                    android:src="@drawable/ic_search2"
                    />

                <ImageView
                    android:id="@+id/close"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:layout_marginRight="25dp"
                    android:layout_toLeftOf="@id/search"
                    android:backgroundTint="@color/white"
                    android:src="@drawable/ic_add2" />

            </RelativeLayout>


        </com.google.android.material.appbar.AppBarLayout>

        <!--        <GridView-->
        <!--            android:layout_width="match_parent"-->
        <!--            android:layout_height="match_parent"-->
        <!--            android:id="@+id/grid_view"-->
        <!--            android:numColumns="2"-->
        <!--            >-->
        <!--        </GridView>-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/img_1"
                android:layout_width="200dp"
                android:layout_height="208dp"
                android:layout_marginLeft="5dp"
                android:src="@drawable/sm6" />

            <ImageView
                android:id="@+id/img_2"
                android:layout_width="191dp"
                android:layout_height="208dp"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="20dp"
                android:layout_toRightOf="@+id/img_1"
                android:src="@drawable/sm2" />
        </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/img_3"
                    android:layout_width="180dp"
                    android:layout_height="266dp"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/sm5" />

                <ImageView
                    android:id="@+id/img_4"
                    android:layout_width="191dp"
                    android:layout_height="266dp"
                    android:layout_marginLeft="1dp"
                    android:layout_marginRight="20dp"
                    android:layout_toRightOf="@+id/img_3"
                    android:src="@drawable/sm4" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/img_5"
                    android:layout_width="180dp"
                    android:layout_height="190dp"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/sm3" />

                <ImageView
                    android:id="@+id/img_6"
                    android:layout_width="191dp"
                    android:layout_height="208dp"
                    android:layout_marginLeft="1dp"
                    android:layout_marginRight="20dp"
                    android:layout_toRightOf="@+id/img_5"
                    android:src="@drawable/sm6" />
            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

</FrameLayout>