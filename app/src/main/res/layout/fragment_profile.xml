<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragments.ProfileFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        >



        <ImageView
            android:id="@+id/imageView"
            android:layout_width="408dp"
            android:layout_height="180dp"
            android:scaleType="centerCrop"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/istoc" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/small_image"
            android:layout_width="84dp"

            android:layout_height="81dp"
            android:layout_marginTop="148dp"
            android:background="#FFFFFF"
            android:backgroundTint="#FFFFFF"
            android:backgroundTintMode="src_in"
            android:focusableInTouchMode="true"
            android:scaleType="centerCrop"
            android:src="@drawable/avatar_img"
            android:tintMode="add"
            android:visibility="visible"
            app:flow_wrapMode="aligned"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="56dp"
            android:layout_marginTop="8dp"
            android:text="Followers"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView4" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="48dp"
            android:text="Following"
            app:layout_constraintBottom_toBottomOf="@+id/textView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/textView"
            app:layout_constraintVertical_bias="1.0" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="64dp"
            android:layout_marginTop="10dp"
            android:fontFamily="sans-serif-medium"
            android:text="15K"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="64dp"
            android:fontFamily="sans-serif-medium"
            android:text="275"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            app:layout_constraintBottom_toBottomOf="@+id/textView4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/textView4" />

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="42dp"
            android:layout_height="45dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="16dp"
            android:backgroundTint="@android:color/tertiary_text_dark"
            android:scaleType="centerCrop"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@android:drawable/ic_menu_preferences" />

        <ImageButton
            android:id="@+id/imageButton2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="24dp"
            android:backgroundTint="?attr/actionModeSplitBackground"
            android:scaleType="centerCrop"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@android:drawable/ic_menu_sort_by_size" />

        <TextView
            android:id="@+id/textView6"
            style="@style/TextAppearance.AppCompat.Display3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="118dp"
            android:layout_marginTop="25dp"
            android:allowUndo="true"
            android:fontFamily="sans-serif-black"
            android:text="Robin"
            android:textColor="@color/black"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView" />

        <TextView
            android:id="@+id/textView9"
            style="@style/TextAppearance.AppCompat.Display3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="84dp"
            android:allowUndo="true"
            android:fontFamily="sans-serif-black"
            android:text="Designer"
            android:textColor="@color/black"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="@+id/textView6"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/textView6" />

        <TextView
            android:id="@+id/vertical_line"
            android:layout_width="5dp"
            android:layout_height="32dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="20dp"
            android:background="@color/black"
            android:backgroundTintMode="src_over"
            app:layout_constraintBottom_toBottomOf="@+id/textView6"
            app:layout_constraintEnd_toStartOf="@+id/textView9"
            app:layout_constraintStart_toEndOf="@+id/textView6"
            app:layout_constraintTop_toTopOf="@+id/textView6" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="Interests :Designing,Self Building,Enterpreneur"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView6" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/highlight4"
            android:layout_width="64dp"

            android:layout_height="64dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="12dp"
            android:background="#FFFFFF"
            android:focusableInTouchMode="true"
            android:scaleType="centerCrop"
            android:src="@drawable/youtube_logo"
            android:visibility="visible"
            app:flow_wrapMode="none"
            app:layout_constraintEnd_toEndOf="@+id/small_image"
            app:layout_constraintHorizontal_bias="0.134"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView10" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/highlight3"
            android:layout_width="64dp"

            android:layout_height="64dp"
            android:background="#FFFFFF"
            android:focusableInTouchMode="true"
            android:scaleType="centerCrop"
            android:src="@drawable/facebook_logo2"
            android:visibility="visible"
            app:flow_wrapMode="none"
            app:layout_constraintBottom_toBottomOf="@+id/highlight4"
            app:layout_constraintEnd_toStartOf="@+id/highlight2"
            app:layout_constraintHorizontal_bias="0.492"
            app:layout_constraintStart_toEndOf="@+id/highlight4"
            app:layout_constraintTop_toTopOf="@+id/highlight4"
            app:layout_constraintVertical_bias="0.0" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/highlight1"
            android:layout_width="64dp"

            android:layout_height="64dp"
            android:layout_marginEnd="10dp"
            android:background="#FFFFFF"
            android:focusableInTouchMode="true"
            android:scaleType="centerCrop"
            android:src="@drawable/twitter_logo"
            android:visibility="visible"
            app:flow_wrapMode="none"
            app:layout_constraintBottom_toBottomOf="@+id/highlight2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.934"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/highlight2"
            app:layout_constraintVertical_bias="0.0" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/highlight2"
            android:layout_width="64dp"

            android:layout_height="64dp"
            android:layout_marginEnd="28dp"
            android:background="#FFFFFF"
            android:focusableInTouchMode="true"
            android:scaleType="centerCrop"
            android:src="@drawable/insta_logo"
            android:visibility="visible"
            app:flow_wrapMode="none"
            app:layout_constraintBottom_toBottomOf="@+id/highlight3"
            app:layout_constraintEnd_toStartOf="@+id/highlight1"
            app:layout_constraintTop_toTopOf="@+id/highlight3"
            app:layout_constraintVertical_bias="0.0" />

        <LinearLayout
            app:layout_constraintTop_toBottomOf="@+id/highlight1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/collection1"
                >

                <ImageView
                    android:id="@+id/img_1"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:src="@drawable/sm5" />

                <ImageView
                    android:id="@+id/img_2"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_toRightOf="@+id/img_1"
                    android:layout_weight="1"
                    android:src="@drawable/sm2" />

                <ImageView
                    android:id="@+id/img_3"
                    android:layout_width="0dp"
                    android:layout_height="102dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="15dp"
                    android:layout_toRightOf="@+id/img_2"
                    android:layout_weight="1"
                    android:src="@drawable/sm3" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/collection2"
                >

                <ImageView
                    android:id="@+id/img_4"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:src="@drawable/sm4" />

                <ImageView
                    android:id="@+id/img_5"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_toRightOf="@+id/img_4"
                    android:layout_weight="1"
                    android:src="@drawable/sm5" />

                <ImageView
                    android:id="@+id/img_6"
                    android:layout_width="0dp"
                    android:layout_height="102dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="15dp"
                    android:layout_toRightOf="@+id/img_5"
                    android:layout_weight="1"
                    android:src="@drawable/sm6" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/collection3"
                >

                <ImageView
                    android:id="@+id/img_7"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:src="@drawable/sm2" />

                <ImageView
                    android:id="@+id/img_8"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_toRightOf="@+id/img_7"
                    android:layout_weight="1"
                    android:src="@drawable/sm6" />

                <ImageView
                    android:id="@+id/img_9"
                    android:layout_width="0dp"
                    android:layout_height="102dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="15dp"
                    android:layout_toRightOf="@+id/img_8"
                    android:layout_weight="1"
                    android:src="@drawable/sm4" />


            </LinearLayout>




        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>